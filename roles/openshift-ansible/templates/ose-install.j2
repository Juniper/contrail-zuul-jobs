# file templated from: https://github.com/savithruml/openshift-contrail/blob/master/openshift/install-files/all-in-one/ose-install
# deployment procedure: https://github.com/Juniper/contrail-docker/wiki/Red-Hat-OpenShift-with-Contrail-SDN
[OSEv3:children]
masters
nodes
etcd

[OSEv3:vars]
ansible_ssh_user=root
ansible_become=yes
debug_level=2
deployment_type={{ openshift_deployment_type }}
openshift_release=v{{ openshift_version }}
openshift_install_examples=true
openshift_master_identity_providers=[{'name': 'htpasswd_auth', 'login': 'true', 'challenge': 'true', 'kind': 'HTPasswdPasswordIdentityProvider', 'filename': '/etc/origin/master/htpasswd'}]
osm_cluster_network_cidr=10.32.0.0/12
openshift_portal_net=10.96.0.0/12
openshift_use_dnsmasq=true
openshift_clock_enabled=true
openshift_hosted_manage_registry=true
openshift_hosted_manage_router=true
openshift_enable_service_catalog=false
openshift_use_openshift_sdn=false
openshift_disable_check=docker_storage,package_version
os_sdn_network_plugin_name='cni'


# Below are Contrail variables. Comment them out if you don't want to install Contrail through ansible-playbook

# Contrail 4.X releases
#openshift_use_contrail=true
#contrail_os_release=redhat7
#contrail_version=4.0
#analyticsdb_min_diskgb=50
#configdb_min_diskgb=25
#vrouter_physical_interface=eno1
#contrail_docker_images_path=/root/docker_images

# Contrail 5.X releases
openshift_use_contrail=true
contrail_version={{ contrail_version }}
analyticsdb_min_diskgb=50
configdb_min_diskgb=25
contrail_container_tag={{ contrail_container_tag }}
vrouter_physical_interface={{ ansible_default_ipv4.interface }}

[masters]
{{ ansible_default_ipv4.address }} openshift_hostname={{ ansible.fqdn }}

[etcd]
{{ ansible_default_ipv4.address }} openshift_hostname={{ ansible.fqdn }}

[nodes]
{{ ansible_default_ipv4.address }} openshift_hostname={{ ansible.fqdn }} openshift_node_labels="{'region': 'infra'}"
