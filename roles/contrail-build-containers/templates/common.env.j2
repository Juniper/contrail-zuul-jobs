{% if ansible_distribution == 'RedHat' %}
{% set containers_tag = 'rhel-' + openstack_version + '-' + contrail_version %}
LINUX_DISTR=rhel7
LINUX_DISTR_VER=7.6-362
YUM_ENABLE_REPOS=""
CONTRAIL_CONTAINER_TAG={{ containers_tag }}
DEPLOYERS_BASE_CONTAINER={{ contrail_docker_registry }}/contrail-general-base:{{ containers_tag }}
{% elif ansible_distribution == 'CentOS' %}
{% set containers_tag = openstack_version + '-' + contrail_version %}
LINUX_DISTR=centos
LINUX_DISTR_VER=7.7.1908
DEPLOYERS_BASE_CONTAINER={{ contrail_docker_registry }}/contrail-general-base:{{ contrail_version }}
{% endif %}
