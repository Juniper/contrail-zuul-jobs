contrail_configuration:
{-% if ansible_distribution == 'RedHat' %}
  LINUX_DISTR: rhel
{-% endif %}
  CONTRAIL_VERSION: "{{ contrail_version }}"
  CLOUD_ORCHESTRATOR: "{{ cloud_orchestrator }}"
  CONTROLLER_NODES: "{{ control_ip }}"
  CONTROL_NODES: "{{ ansible_eth1.ipv4.address }}"
  LOG_LEVEL: SYS_DEBUG
  PHYSICAL_INTERFACE: eth1
  VROUTER_GATEWAY: {{ ansible_default_ipv4.gateway }}
  AUTH_MODE: keystone
  AAA_MODE: rbac
  KEYSTONE_AUTH_ADMIN_PASSWORD: c0ntrail123
  KEYSTONE_AUTH_HOST: "{{ control_ip }}"
  KEYSTONE_AUTH_URL_VERSION: "/v3"
  RABBITMQ_NODE_PORT: 5673
  OPENSTACK_VERSION: "{{ openstack_version }}"
  CONFIG_NODEMGR__DEFAULTS__minimum_diskGB: 30
  DATABASE_NODEMGR__DEFAULTS__minimum_diskGB: 30

kolla_config:
  kolla_globals:
    network_interface: eth0
    api_interface: eth0
    neutron_external_interface: eth0
    kolla_external_vip_interface: eth0
    kolla_internal_vip_address: "{{ control_ip }}"
    contrail_api_interface_address: "{{ control_ip }}"
    enable_haproxy: no
    enable_ironic: 'no'
    enable_ironic_notifications: 'no'
    openstack_service_workers: 1
    openstack_release: "{{ kolla_version }}"
    kolla_base_distro: "{{ kolla_docker_distro }}"
    docker_registry: "{{ docker_registry.fqdn }}:{{ docker_registry.port }}"
    neutron_opencontrail_init_image_full: "{{ contrail_docker_registry }}/contrail-openstack-neutron-init:{{ openstack_version }}-{{ contrail_version }}"
    nova_compute_opencontrail_init_image_full: "{{ contrail_docker_registry }}/contrail-openstack-compute-init:{{ openstack_version }}-{{ contrail_version }}"
    ironic_notification_manager_image_full: "{{ contrail_docker_registry }}/contrail-openstack-ironic-notification-manager:{{ openstack_version }}-{{ contrail_version }}"
    heat_opencontrail_init_image_full: "{{ contrail_docker_registry }}/contrail-openstack-heat-init:{{ openstack_version }}-{{ contrail_version }}"
  kolla_passwords:
    keystone_admin_password: c0ntrail123
  customize:
    nova.conf: |
      [libvirt]
      virt_type=qemu
      cpu_mode=none

orchestrator_configuration:
  internal_vip: "{{ control_ip }}"
  keystone:
    version: v3
    password: c0ntrail123
