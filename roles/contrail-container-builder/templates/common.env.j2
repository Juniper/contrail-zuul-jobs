{% if ansible_distribution == 'RedHat' %}
LINUX_DISTR=rhel7
YUM_ENABLE_REPOS=""
CONTRAIL_CONTAINER_TAG=rhel-{{ openstack_version }}-{{ contrail_version }}
{% elif ansible_distribution == 'CentOS' %}
LINUX_DISTR=centos
{% endif %}
LINUX_DISTR_VER=latest
CONTRAIL_VERSION={{ contrail_version }}
CONTRAIL_REGISTRY=contrail-docker-registry
CONTRAIL_REPOSITORY={{ contrail_package_repository }}
OPENSTACK_VERSION={{ openstack_version }}
OPENSTACK_SUBVERSION={{ openstack_subversion }}
